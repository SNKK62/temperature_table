<%= render 'share/error' %>

<div class="position-absolute top-50 start-50 translate-middle">
<h1>メンバーを追加</h1>

<div class="text-center row">
  <div class=" col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :メンバー名 class: "my-3",value: ""%>
