<h1 class="mx-5 mt-5"><%= @user.name %></h1>

<div class="float-end me-3">
<%= link_to "編集", edit_user_path(@user),class: "me-3" %>
<%= link_to "このメンバーを消す", @user, method: :delete, data: { confirm: "本当に消しますか？" },class: "delete-account ms-2" %>

</div>



<button class="my-5 btn me-3 " style="background-color: black; margin-left: 100px; width: auto;">
  <%= link_to "体温表を見る", group_path(Group.find_by(id: @user.group_id)),class: " text-center mx-3", style: "color: white; text-decoration: none; width: auto;" %>
</button>



<table class="table col-md-5" >
  <thead>
    <tr>
      <th scope="col">日付</th>
      <th scope="col">体温</th>
      
    </tr>
  </thead>
  <tbody>
    <% @temps.each do |temp| %>
        <tr>
            <th scope="row"><%= temp.created_at.strftime('%m/%d') %></th>
            <td><%= temp.num %></td>
        </tr>
    <%end%>
    
  </tbody>
</table>