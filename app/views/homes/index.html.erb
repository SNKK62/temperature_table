
<div class="container" id="errors">
  <%= render 'shared/error'%>
</div>


<!-- Button trigger modal -->
<div class="container  pt-3">
<button type="button" class="mb-5 btn btn-primary position-absolute top-1 start-50 translate-middle" data-bs-toggle="modal" data-bs-target="#exampleModal">
  体温を追加
</button>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">体温</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <%= form_tag('/', method: :post,remote: true ) do %>
      <%# <% if @temperature%> 
        <%# <% render 'shared/error', object: @temperature %> 
      <%# <% end %> 
      <div class="modal-body ">
        <div class="form-group">
          <%= label_tag :番号 %>
          <%= text_field_tag :id %>
        </div>
        <div class="form-group">
          <%= label_tag :体温 %>
          <%= text_field_tag :num%>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= submit_tag "追加", class: "btn btn-primary" %>
      <%end%>
       
      </div>
    </div>
  </div>
</div>
<div class="container pt-3">
  <div class="row mt-5 tables">
    <%= render 'table', users: @users %>
  </div>
</div>
