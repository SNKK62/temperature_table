<%# <%= render 'share/error_messages' object: %> 
<%= render 'share/error' %>

<div class="position-absolute top-50 start-50 translate-middle">
<h1 class="text-center">Log in</h1>

<div class="text-center row">
  <div class="col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name ,class: "my-auto"%>
      <%= f.text_field :name, class: 'my-2 form-control' %>

      <%= f.label :password ,class: "my-auto"%>
      <%= f.password_field :password, class: 'my-2 form-control' %>

      <%= f.label :remember_me, class: "mx-auto text-center my-3 checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span class="">次回からログイン状態を維持する</span>
      <% end %>


      <%= f.submit "Log in", class: "mb-3 mx-5 btn btn-primary" ,style: "width: 200px;"%>
    <% end %>

    <p>まだアカウントを持ってない？ =><%= link_to "アカウントを作ろう！！", signup_path %></p>
  </div>
</div>
</div>